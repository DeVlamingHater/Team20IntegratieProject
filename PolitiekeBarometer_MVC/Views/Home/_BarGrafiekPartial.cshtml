@model IList<Domain.Element>

@{
    ViewBag.Title = "_BarGrafiekPartial";
 }
        <!-- Example Bar Chart Card-->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-bar-chart"></i> Bar Chart Example
            </div>
            <div class="card-body">
                <canvas class="MyBarChart" width="100" height="50"></canvas>
                <button onclick="makeGraph()">Laad grafiek</button>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>

<script>
    var index = 0;
    var namen = [];
    namen = @Html.Raw(Json.Encode(ViewBag.Namen));
    var trends = [];
        trends = @Html.Raw(Json.Encode(ViewBag.Trending));
    function makeGraph() {
        var ctx = document.getElementsByClassName("MyBarChart")[index];
        index = index + 1;
        var myLineChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: namen,
                datasets: [{
                    label: "Trending",
                    backgroundColor: "rgba(2,117,216,1)",
                    borderColor: "rgba(2,117,216,1)",
                    data: trends,
                }],
            },
            options: {
                scales: {
                    xAxes: [{
                        time: {
                            unit: 'month'
                        },
                        gridLines: {
                            display: false
                        },
                        ticks: {
                            maxTicksLimit: 6
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            min: 0,
                            max: 1,
                            maxTicksLimit: 10
                        },
                        gridLines: {
                            display: true
                        }
                    }],
                },
                legend: {
                    display: true
                }
            }
        });
    }
</script>

