<input type="submit" value="click me" id="maakGrafiek" />

@section scripts{
    <script type="text/javascript">
        var grafiekType = "lijn";
        var zoneID = 1;
        var datum = ["hey", "", "yuuw"];
        var dataType = 5;
       $(document).ready(function () {
            $("#maakGrafiek").click(function () {
                var f = {};
                f.url = '@Url.Action("TestFunction", "Home")';
                f.type = "POST";
                f.dataType = "json";
                f.data = JSON.stringify({ GrafiekType: grafiekType, Zone: zoneID, Datum: datum, DataType: dataType });
                f.contentType = "application/json";
                f.success = function (response) {
                    alert("success");
                };
                f.error = function (response) {
                    alert("failed");
                };
                $.ajax(f);
            });
        });

    </script>

}