@model IList<Domain.Element>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Charts</li>
        </ol>
        <!-- Example Bar Chart Card-->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-bar-chart"></i> Bar Chart Example
            </div>
            <div class="card-body">
                <canvas id="MyBarChart" width="100" height="50"></canvas>
                <button onclick="makeGraph()">Laad grafiek</button>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
</div>

@foreach
                                (var element in
                                Model)
{
    <li class="trend">@element.Trend</li>
    <li class="naam" >@element.Naam</li> <br />
}


<script>
    function makeGraph() {
        var trends = [];
        var namen = [];
        var trends1 = document.getElementsByClassName("trend");
        var trends2 = [];
        for (var i = 0; i < trends1.length; i++) {
            var getal = 0.5;
            getal = parseFloat(trends1[i].innerHTML.replace(",", "."));
            trends2.push(getal);
        }
        var namen1 = document.getElementsByClassName("naam");
        for (var i = 0; i < trends2.length; i++) {
            var getal = 0.5;
            getal = trends2[i];
            trends.push(getal);
            namen.push(namen1[i].innerHTML);
        }
        var ctx = document.getElementById("MyBarChart");
        var myLineChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: namen,
                datasets: [{
                    label: "Trending",
                    backgroundColor: "rgba(2,117,216,1)",
                    borderColor: "rgba(2,117,216,1)",
                    data: trends,
                }],
            },
            options: {
                scales: {
                    xAxes: [{
                        time: {
                            unit: 'month'
                        },
                        gridLines: {
                            display: false
                        },
                        ticks: {
                            maxTicksLimit: 6
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            min: 0,
                            max: 1,
                            maxTicksLimit: 10
                        },
                        gridLines: {
                            display: true
                        }
                    }],
                },
                legend: {
                    display: true
                }
            }
        });
    }
</script>

