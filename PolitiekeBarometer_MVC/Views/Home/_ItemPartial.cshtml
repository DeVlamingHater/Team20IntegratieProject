                            }],
                            yAxes: [{
                                ticks: {
                                    min: 0,
                                    max: 1.2,
                                    maxTicksLimit: 10
                                },
                                gridLines: {
                                    display: true
                                }
                            }],
                        },
                        legend: {
                            display: true
                        }
                    }
                });
            }
            function PieChart() {
                var ctx = document.getElementsByClassName("Chart")[grafiekIndex];
                var myPieChart = new Chart(ctx, {
                 type: 'pie',
                 data: {
                     labels: labelArray,
                     datasets: [{
                         data: floatArray,
