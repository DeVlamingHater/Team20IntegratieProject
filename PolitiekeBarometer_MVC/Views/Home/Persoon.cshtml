@model Domain.Persoon
@{
    ViewBag.Title = "Persoon";
}


<div class="card mb-3" align="center" style="margin:20px">
    <div class="card-body grid-container">
        <div class="naam">
            @Html.DisplayFor(model => model.Naam)
        </div>
        <div class="organisatie">
            @if (Model.Organisatie is null)
            {
            <p>Geen organisatie gevonden</p>
            }
            else
            {
              @Html.DisplayFor(model => model.Organisatie.Naam)
            }
        </div>
       
            <img class="rounded-circle border foto" height="150" src="@Url.Action("setImage", new {twitter = Model.Twitter })" />
        
            <a class="twitter" href="@Url.Action("setTwitter", new { twitter = Model.Twitter })" target="_blank"> twitter: @Html.DisplayFor(model => model.Twitter)</a>

        
    </div>
</div>
            @Html.Action("_ItemPartial", new { grafiekType = 0, index = 0, labels = ViewBag.LabelsLijn, data = ViewBag.DataLijn })
            @Html.Action("_ItemPartial", new { grafiekType = 1, index = 1, labels = ViewBag.Labels, data = ViewBag.Data })
            @Html.Action("_ItemPartial", new { grafiekType = 2, index = 2, labels = ViewBag.Labels, data = ViewBag.Data })
@ViewBag.LabelsLijn

@ViewBag.DataLijn
<style>    /* https://www.w3schools.com/css/tryit.asp?filename=trycss_grid_layout_named */ 
    .foto {
        grid-column:1;
        grid-row:1 / span 3;
    }

    .naam {
        grid-column:2 /span 2;
        grid-row: 1;
    }

    .twitter {
        grid-column:2 / span 2;
        grid-row:3;
    }
    .organisatie {
        grid-column:2 /span 2;
        grid-row:2;
    }


    .grid-container {
        display: grid;
        grid-gap: 20px;
        padding: 20px;
        align-self: center;
    }
</style>

