@model IEnumerable<Domain.Organisatie>

@{
    ViewBag.Title = "LijstOrganisaties";
}
<div style="margin:20px">
    <h2>LijstOrganisaties</h2>

    <p>
        @Html.ActionLink("Create New", "CreateOrganisatie")
        <br />
        @Html.ActionLink("Downloaden", "ExportOrganisatiesToExcel")
    </p>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trend)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrendingPlaats)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trend)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrendingPlaats)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditOrganisatie", new { id = item.Id }) |
                    @Html.ActionLink("Details", "DetailsOrganisatie", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteOrganisatie", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
