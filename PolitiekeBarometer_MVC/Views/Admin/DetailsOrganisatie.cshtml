@model Domain.Organisatie

@{
    ViewBag.Title = "DetailsOrganisatie";
}


<div class="container">
    <div class="card">
        <div class="card-header">Details van een organisatie</div>
        <div class="card-body bg-dark">
            <div class="witteRuimte form-group">
                @Html.ActionLink("Back to List", "LijstOrganisaties")
            </div>
            <div class="witteRuimte form-group">
                <h4>Organisatie</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Naam)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Naam)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Trend)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Trend)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TrendingPlaats)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TrendingPlaats)
                    </dd>
                </dl>
                @Html.ActionLink("Edit", "EditOrganisatie", new { id = Model.Id })
            </div>
        </div>
    </div>
</div>