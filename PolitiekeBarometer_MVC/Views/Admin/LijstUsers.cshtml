@model IEnumerable<DAL.EF.ApplicationUser>

@{
    ViewBag.Title = "LijstUsers";
}

<style>

    .witteRuimte {
        border-radius: 5px;
        padding: 2rem;
        border: .5rem;
        border-color: darkgray;
        background-color: white;
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">Lijst van de users</div>
        <div class="card-body bg-dark">
            <div class="witteRuimte form-group">
                <p>
                    @Html.ActionLink("Create New", "CreateUser")
                    <br />
                    @Html.ActionLink("Download", "ExportUsersToExcel")
                </p>
            </div>
            <div class="witteRuimte form-group">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmailConfirmed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th>

                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailConfirmed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditUser", new { id = item.Id }) |
                                @Html.ActionLink("Details", "DetailsUser", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </table>
            </div>
           
        </div>
    </div>
</div>






