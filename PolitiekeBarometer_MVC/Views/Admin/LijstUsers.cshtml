@model IEnumerable<Domain.Platformen.Gebruiker>

@{
    ViewBag.Title = "LijstUsers";
}

<h2>LijstUsers</h2>

<p>
    @Html.ActionLink("Create New", "CreateUser")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditUser", new { id=item.GebruikerId }) |
            @Html.ActionLink("Details", "DetailsUser", new { id=item.GebruikerId }) |
            @Html.ActionLink("Delete", "DeleteUser", new { id=item.GebruikerId })
        </td>
    </tr>
}

</table>
